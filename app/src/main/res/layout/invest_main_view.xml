<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.blockchain.store.playmarket.ui.invest_screen.InvestActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/invest_app_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/invest_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/invest_main_color"
        android:textSize="32sp"
        tools:text="PlayMarket 2.0" />

    <TextView
        android:id="@+id/invest_app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/invest_main_color"
        android:textSize="12sp"
        tools:text="A Decentralized App Store for Android \nmade with the Ethereum Blockchain" />

    <LinearLayout
        android:id="@+id/stage_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/invest_stage_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage #"
            android:textColor="@color/invest_main_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/invest_current_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/invest_main_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/invest_total_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/3"
            android:textColor="@color/invest_main_color" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/invest_clock_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:src="@drawable/clock"
            android:tint="@color/invest_main_color" />

        <TextView
            android:id="@+id/invest_time_remains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--:--:--"
            android:textColor="@color/invest_main_color"
            android:textSize="20sp" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/invest_progress_bar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:max="450000000"
        android:progress="50000000" />

    <LinearLayout
        android:id="@+id/earned_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/invest_current_earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1242"
            android:textColor="@color/invest_main_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/invest_total_earned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="25500"
            android:textColor="@color/invest_main_color"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hardcap_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invest_earned_message"
            android:textColor="@color/invest_main_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/invest_earned_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invest_earned_message"
            android:textColor="@color/invest_main_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/invest_hardcap"
            android:textColor="@color/invest_main_color"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/open_app_btn"
            style="@style/secondaryButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="40dp"
            android:background="@color/Clear"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/open_app_info" />

        <Button
            android:id="@+id/invest_btn"
            style="@style/ColorButton"
            android:text="@string/btn_invest" />
    </LinearLayout>

</LinearLayout>